<%-include ('../partials/header') %>

<div class="content">
    <div style="width: 30%; margin: 25px auto;">
        <h1 style="text-align: center;">Shtoni nje Aktivitet</h1>
        <form action="/aktivitetet/<%=aktivitetet._id%>?_method=PUT" enctype="multipart/form-data" method="POST">
            <div class="field">
                <label >Titulli</label>
                <input  type="text" name="title" value="<%= aktivitetet.title%>">
            </div>
            <div class="input-group mb-3">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="inputGroupFile01" name="image" value="<%= aktivitetet.image%>">
                <label class="custom-file-label" for="inputGroupFile01">Imazh</label>
              </div>
            </div>
            <div class="field">
                <label >Pershkrimi</label>
                <input  type="text" name="description" value="<%= aktivitetet.description %>">
            </div>
            <div class="field">
            <button class="btn btn-primary btn-large btn-block">Shtoni</button>
        </div>
        </form>
        <a class="button" href="/aktivitetet">Kthehuni</a>
        </div>
</div>

<%-include ('../partials/footer') %>